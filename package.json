{
  "name": "@sap/capm-samples-bookshop",
  "description": "Bookshop sample app",
  "repository": "https://github.wdf.sap.corp/caps/bookshop.git",
  "version": "1.0.0",
  "license": "ISC",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "db/",
    "srv/"
  ],
  "dependencies": {
    "@sap/cds": "latest",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "sqlite3": "^4.0.4"
  },
  "scripts": {
    "setup": "npm i && cds deploy -2 sqlite:db/bookshop.db",
    "start": "cds run",
    "deploy": "cds deploy"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "model": [
          "db",
          "srv"
        ],
        "credentials": {
          "database": "db/bookshop.db"
        }
      }
    }
  }
}