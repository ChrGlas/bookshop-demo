{
    "features": {
        "-compositions": true,
        "codelists": true
    },
    "build": {
        "tasks": [
            { "for": "hana",    "src":"db",  "options":{ "model":["db"] } },
            { "for": "node-cf", "src":"srv", "options":{ "model":["srv","app"] } },
            { "for": "fiori",   "src": "app/admin" },
            { "for": "fiori",   "src": "app/browse" },
            { "for": "fiori",   "src": "app/orders" }
        ]
    },
    "auth": {
        "passport": {
            "strategy": "mock",
            "users": {
                "admin": {
                    "jwt": {
                        "userInfo": {
                            "logonName": "admin",
                            "email": "alice@example.com"
                        },
                        "scopes": [
                            "admin"
                        ]
                    }
                },
                "littleadmin": {
                    "jwt": {
                        "userInfo": {
                            "logonName": "littleadmin",
                            "email": "littleadmin@example.com"
                        },
                        "scopes": [
                            "admin"
                        ]
                    }
                },
                "bob": {
                    "jwt": {
                        "userInfo": {
                            "logonName": "bob@example.com"
                        },
                        "scopes": [
                            "authenticated-user",
                            "openid"
                        ]
                    }
                }
            }
        }
    }

}