{
    "build": {
        "target": ".",
        "tasks": [
            {
                "for": "hana",
                "src": "db",
                "options": {
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            },
            {
                "for": "node-cf",
                "src": "srv",
                "options": {
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            }
        ]
    },
    "auth": {
        "passport": {
            "strategy": "mock",
            "users": {
                "admin": {
                    "jwt": {
                        "userInfo": {
                            "logonName": "admin",
                            "email": "alice@example.com"
                        },
                        "scopes": [
                            "admin"
                        ]
                    }
                },
                "littleadmin": {
                    "jwt": {
                        "userInfo": {
                            "logonName": "littleadmin",
                            "email": "littleadmin@example.com"
                        },
                        "scopes": [
                            "admin"
                        ]
                    }
                },
                "bob": {
                    "jwt": {
                        "userInfo": {
                            "logonName": "bob@example.com"
                        },
                        "scopes": [
                            "authenticated-user",
                            "openid"
                        ]
                    }
                }
            }
        }
    }

}